&GLOBAL
  PROJECT  optRI
  PRINT_LEVEL MEDIUM
  RUN_TYPE ENERGY
  &TIMINGS
     THRESHOLD 0.0001
  &END
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME  BASIS_MOLOPT
    BASIS_SET_FILE_NAME  BASIS_MOLOPT_UCL
    BASIS_SET_FILE_NAME  ./LOCAL_RI_BASIS
    SORT_BASIS EXP
    POTENTIAL_FILE_NAME  GTH_POTENTIALS
    UKS
    MULTIPLICITY  REPLACE_MULTIPLICITY
    CHARGE 0
    &MGRID
      CUTOFF  500
      REL_CUTOFF  100
    &END MGRID
    &QS
      METHOD GAPW
      EPS_DEFAULT 1.0E-12
      EPS_PGF_ORB 1.0E-12
    &END QS
    &SCF
      SCF_GUESS RESTART
      EPS_SCF 1.0E-8
      MAX_SCF 500
      &PRINT
        &RESTART ON
        &END
      &END
      &MIXING
          METHOD BROYDEN_MIXING
          ALPHA 0.1
          BETA 1.5
          NBROYDEN 8
      &END
    &END SCF

      &XC
        &HF
          FRACTION 1.0000000
          &SCREENING
            EPS_SCHWARZ 1.0E-8
            SCREEN_ON_INITIAL_P FALSE
          &END SCREENING
        &END HF
        &WF_CORRELATION
          NUMBER_PROC 1
          &RI
            &OPT_RI_BASIS
              DELTA_I_REL 1.0E-6
              DELTA_RI 1.0E-5
              EPS_DERIV 1.0E-3
              MAX_ITER 100
            &END OPT_RI_BASIS
          &END RI
        &END WF_CORRELATION
        &XC_FUNCTIONAL NONE
        &END XC_FUNCTIONAL
      &END XC

  &END DFT
  &SUBSYS
    &CELL
      ABC                 10.0 10.0 10.0
      ALPHA_BETA_GAMMA    90 90 90
      PERIODIC NONE
    &END CELL

    &TOPOLOGY      
      &CENTER_COORDINATES
      &END
    &END

    &KIND REPLACE_ELEMENT
      BASIS_SET ORB    TZVP-MOLOPT-SR-GTH
      BASIS_SET RI_AUX RI
      POTENTIAL        REPLACE_POTENTIAL
    &END KIND

    &COORD
       W 0.0 0.0 0.0
    &END COORD
  &END SUBSYS
&END FORCE_EVAL
